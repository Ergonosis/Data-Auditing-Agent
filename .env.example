# =============================================================================
# Copy this file to .env and fill in the required values before running.
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED to run the demo pipeline
# -----------------------------------------------------------------------------

# Your OpenRouter API key — get one at https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_key_here


# -----------------------------------------------------------------------------
# Optional — defaults below work as-is for the demo
# -----------------------------------------------------------------------------

LLM_PROVIDER=openrouter
DEFAULT_LLM_MODEL=anthropic/claude-haiku-4.5
CLAUDE_HAIKU_MODEL=anthropic/claude-haiku-4.5
CLAUDE_SONNET_MODEL=anthropic/claude-sonnet-4.5

# -----------------------------------------------------------------------------
# Not needed for the demo (demo uses in-memory state, not Redis or Databricks)
# -----------------------------------------------------------------------------

DATABRICKS_HOST=your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=dapi_xxxxx
DATABRICKS_WAREHOUSE_ID=warehouse_id
DATABRICKS_CATALOG=auditing_catalog

REDIS_HOST=localhost:6379
REDIS_DB=0
STATE_BACKEND=redis

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------

LOG_LEVEL=INFO
ENVIRONMENT=development
